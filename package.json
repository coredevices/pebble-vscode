{
  "name": "pebble-vscode",
  "displayName": "Pebble",
  "description": "Development tools for Pebble apps",
  "version": "0.0.2",
  "publisher": "coredevices",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.99.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coredevices/pebble-vscode"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:wscript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Pebble",
      "properties": {
        "pebble.defaultPlatform": {
          "type": "string",
          "enum": [
            "aplite",
            "basalt",
            "chalk",
            "diorite",
            "emery"
          ],
          "enumItemLabels": [
            "Pebble Classic",
            "Pebble Time",
            "Pebble Time Round",
            "Pebble 2",
            "Pebble Time 2"
          ],
          "description": "Default platform to run a project in the emulator."
        },
        "pebble.phoneIp": {
          "type": "string",
          "default": "",
          "description": "IP address of the phone connected to Pebble."
        }
      }
    },
    "viewsWelcome": [
      {
        "view": "backgroundTreeView",
        "contents": "[New Project](command:pebble.newProject)\n[Open Project](command:pebble.openProject)\nSettings\n[Change Emulator Platform](command:pebble.setDefaultPlatform)\n[Change Phone IP](command:pebble.setPhoneIp)",
        "when": "pebbleProject"
      },
      {
        "view": "backgroundTreeView",
        "contents": "[New Project](command:pebble.newProject)\n[Open Project](command:pebble.openProject)",
        "when": "!pebbleProject"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pebble-container",
          "title": "Pebble",
          "icon": "resources/pebble-icon.png"
        }
      ]
    },
    "views": {
      "pebble-container": [
        {
          "id": "backgroundTreeView",
          "name": "Pebble",
          "type": "tree",
          "contextualTitle": "Pebble Projects",
          "icon": "$(file-code)"
        }
      ],
      "explorer": [
        {
          "id": "pebblePreviewSidebar",
          "name": "Pebble Emulator",
          "type": "webview",
          "contextualTitle": "Pebble Emulator",
          "icon": "$(device-mobile)",
          "when": "pebbleProject"
        }
      ]
    },
    "commands": [
      {
        "command": "pebble.newProject",
        "title": "New Project",
        "category": "Pebble"
      },
      {
        "command": "pebble.runEmulator",
        "title": "Run on Emulator",
        "category": "Pebble"
      },
      {
        "command": "pebble.runEmulatorLogs",
        "title": "Run on Emulator with Logs",
        "category": "Pebble"
      },
      {
        "command": "pebble.setDefaultPlatform",
        "title": "Set Default Platform",
        "category": "Pebble"
      },
      {
        "command": "pebble.runPhone",
        "title": "Run on Phone",
        "category": "Pebble"
      },
      {
        "command": "pebble.runPhoneLogs",
        "title": "Run on Phone with Logs",
        "category": "Pebble"
      },
      {
        "command": "pebble.setPhoneIp",
        "title": "Set Phone IP",
        "category": "Pebble"
      },
      {
        "command": "pebble.openProject",
        "title": "Open Project",
        "category": "Pebble"
      },
      {
        "command": "pebble.showSidebarPreview",
        "title": "Show Sidebar Preview",
        "category": "Pebble"
      },
      {
        "command": "pebble.showEditorPreview",
        "title": "Show Editor Preview",
        "category": "Pebble"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "pebble.runEmulator",
          "group": "navigation@-1",
          "when": "pebbleProject"
        },
        {
          "command": "pebble.runEmulatorLogs",
          "group": "navigation@-1",
          "when": "pebbleProject"
        },
        {
          "command": "pebble.runPhone",
          "group": "navigation@-1",
          "when": "pebbleProject"
        },
        {
          "command": "pebble.runPhoneLogs",
          "group": "navigation@-1",
          "when": "pebbleProject"
        }
      ],
      "commandPalette": [
        {
          "command": "pebble.runEmulator",
          "when": "pebbleProject"
        },
        {
          "command": "pebble.runEmulatorLogs",
          "when": "pebbleProject"
        },
        {
          "command": "pebble.runPhone",
          "when": "pebbleProject"
        },
        {
          "command": "pebble.runPhoneLogs",
          "when": "pebbleProject"
        },
        {
          "command": "pebble.showSidebarPreview",
          "when": "pebbleProject"
        },
        {
          "command": "pebble.showEditorPreview",
          "when": "pebbleProject"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
