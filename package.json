{
  "name": "pebble-vscode",
  "displayName": "pebble-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:wscript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Pebble",
      "properties": {
        "pebble-vscode.defaultPlatform": {
          "type": "string",
          "enum": [
            "aplite",
            "basalt",
            "chalk",
            "diorite",
            "emery"
          ],
          "enumItemLabels": [
            "Pebble Classic",
            "Pebble Time",
            "Pebble Time Round",
            "Pebble 2",
            "Pebble Time 2"
          ],
          "description": "Default platform to run a project in the emulator."
        },
        "pebble-vscode.phoneIp": {
          "type": "string",
          "default": "",
          "description": "IP address of the phone connected to Pebble."
        }
      }
    },
    "viewsWelcome": [
      {
        "view": "backgroundTreeView",
        "contents": "[New Project](command:pebble-vscode.newProject)\nSettings\n[Change Emulator Platform](command:pebble-vscode.setDefaultPlatform)\n[Change Phone IP](command:pebble-vscode.setPhoneIp)",
        "when": "pebbleProject"
      },
      {
        "view": "backgroundTreeView",
        "contents": "[New Project](command:pebble-vscode.newProject)",
        "when": "!pebbleProject"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pebble-vscode",
          "title": "Pebble",
          "icon": "resources/pebble-icon.svg"
        }
      ]
    },
    "views": {
      "pebble-vscode": [
        {
          "id": "backgroundTreeView",
          "name": "Pebble",
          "type": "tree",
          "contextualTitle": "Pebble Projects",
          "icon": "$(file-code)"
        }
      ]
    },
    "commands": [
      {
        "command": "pebble-vscode.newProject",
        "title": "New Project",
        "category": "Pebble"
      },
      {
        "command": "pebble-vscode.run",
        "title": "Run Project",
        "category": "Pebble"
      },
      {
        "command": "pebble-vscode.runWithLogs",
        "title": "Run Project with Logs",
        "category": "Pebble"
      },
      {
        "command": "pebble-vscode.setDefaultPlatform",
        "title": "Set Default Platform",
        "category": "Pebble"
      },
      {
        "command": "pebble-vscode.runOnPhone",
        "title": "Run Project on Phone",
        "category": "Pebble"
      },
      {
        "command": "pebble-vscode.runOnPhoneWithLogs",
        "title": "Run Project on Phone with Logs",
        "category": "Pebble"
      },
      {
        "command": "pebble-vscode.setPhoneIp",
        "title": "Set Phone IP",
        "category": "Pebble"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "pebble-vscode.run",
          "group": "navigation",
          "when": "pebbleProject"
        },
        {
          "command": "pebble-vscode.runWithLogs",
          "group": "navigation",
          "when": "pebbleProject"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
